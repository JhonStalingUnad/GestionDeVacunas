<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gestion_de_vacunas.Vakunapp" >
   <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- MAPS -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- LOGIN -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            tools:ignore="MissingClass" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AUTH -->
        <activity
            android:name=".RegistrarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RecordarActivity"
            android:screenOrientation="portrait" />


        <!-- MENU PRINCIPAL -->
        <activity
            android:name=".home.HomeActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <!-- MODULOS -->
        <!--<activity
            android:name=".home.miembro.Miembros"
            android:screenOrientation="portrait" /> -->
        <activity
            android:name=".home.miembro.MiembroFormActivity"
            android:label="@string/registro_de_miembros"
            android:screenOrientation="portrait" />
        <!-- <activity
            android:name=".home.recordatorio.RecordatorioListFragment"
            android:screenOrientation="portrait" /> -->
        <activity
            android:name=".home.recordatorio.RecordatorioFormActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>